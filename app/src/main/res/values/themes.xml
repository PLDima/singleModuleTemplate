<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Search" parent="Theme.AppCompat.DayNight">
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="TextAppearance.AppStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.AppStyle.YouTubeStyle">
        <item name="android:fontFamily">@font/yt_sans</item>
    </style>

    <style name="TextAppearance.AppStyle.YouTubeStyle.Title" parent="TextAppearance.AppStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.AppStyle.YouTubeStyle.Description" parent="TextAppearance.AppStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_200</item>
    </style>

    <style name="TextAppearance.AppStyle.Serif">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.AppStyle.Serif.Light">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TextAppearance.AppStyle.Serif.Thin">
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="TextAppearance.AppStyle.Serif.Thin.small">
        <item name="android:textSize">@dimen/view_count_size</item>
    </style>

</resources>